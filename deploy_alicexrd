#!/bin/bash

BRANCH=${1:-master}

echo "This script will deploy ALICE XRootD settings for the current user"
echo "All previous template configs will be overwritten"
echo -ne "\nSpecify branch/tag; if not used default=master\n>>>>>   ${BRANCH}   <<<<<\n\n"
echo "Press ctrl-c for interrupting; waiting 10 seconds :"

for (( i=1 ; i<12 ; i++)) ; do sleep 1 ; echo -ne "." ; done
echo

CURL='curl -fkLsS -o'

${XRDCONFDIR:=~/alicexrdconf}
${XRDRUNDIR:=~/alicexrdrun}


# create directory for logs and other files
mkdir -p ${XRDRUNDIR} ${XRDCONFDIR} ${XRDCONFDIR}/manager ${XRDCONFDIR}/server ~/alicexrd

# Script for starting services
${CURL} ~/alicexrd/xrd.sh               https://raw.githubusercontent.com/adriansev/alicexrd/${BRANCH}/xrd.sh && chmod +x ~/alicexrd/xrd.sh
${CURL} ~/alicexrd/alicexrdservices.tmp https://raw.githubusercontent.com/adriansev/alicexrd/${BRANCH}/alicexrdservices.tmp

# Main configurations
${CURL} ${XRDCONFDIR}/system.cnf_CHANGEME  https://raw.githubusercontent.com/adriansev/alicexrd/${BRANCH}/alicexrdconf/system.cnf_CHANGEME
${CURL} ${XRDCONFDIR}/crontab.xrootd.tmp   https://raw.githubusercontent.com/adriansev/alicexrd/${BRANCH}/alicexrdconf/crontab.xrootd.tmp
${CURL} ${XRDCONFDIR}/authz.cnf            https://raw.githubusercontent.com/adriansev/alicexrd/${BRANCH}/alicexrdconf/authz.cnf

# Manager templates
${CURL} ${XRDCONFDIR}/manager/xrootd.dpm.cf.tmp    https://raw.githubusercontent.com/adriansev/alicexrd/${BRANCH}/alicexrdconf/manager/xrootd.dpm.cf.tmp
${CURL} ${XRDCONFDIR}/manager/xrootd.xrootd.cf.tmp https://raw.githubusercontent.com/adriansev/alicexrd/${BRANCH}/alicexrdconf/manager/xrootd.xrootd.cf.tmp

# Server templates
${CURL} ${XRDCONFDIR}/server/xrootd.dpm.cf.tmp     https://raw.githubusercontent.com/adriansev/alicexrd/${BRANCH}/alicexrdconf/server/xrootd.dpm.cf.tmp
${CURL} ${XRDCONFDIR}/server/xrootd.xrootd.cf.tmp  https://raw.githubusercontent.com/adriansev/alicexrd/${BRANCH}/alicexrdconf/server/xrootd.xrootd.cf.tmp

